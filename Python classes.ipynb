    "class properties(methods):\n",
    "    # this is the @prop.getter\n",
    "    @property # you'd use it for custom getting, setting, and deleting e.g. as a property specific to a class\n",
    "    def prop(self):\n",
    "        return self.val*3\n",
    "    # custom setter\n",
    "    @prop.setter\n",
    "    def prop(self,value):\n",
    "        self.val=value-1\n",
    "    @prop.deleter\n",
    "    def prop(self):\n",
    "        print(self.val)"
