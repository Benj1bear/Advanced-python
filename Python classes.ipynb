   ],
   "source": [
    "def multiply_(val1,val2):\n",
    "    print(val1,val2)\n",
    "    def wrapper1(func):\n",
    "        def wrapper2(*args):\n",
    "            print(\"multiply: \",args[0],\"*\",args[1],\"=\",args[0]*args[1])\n",
    "            print(\"final: (\",args[0]*args[1],\")+\",val2,\"+\",val1)\n",
    "            return args[0]*args[1]+val2+val1\n",
    "        return wrapper2\n",
    "    return wrapper1\n",
    "@multiply_(5,6)\n",
    "def add(x,y):\n",
    "    return x+y\n",
    "add(1,2)"
   ]
